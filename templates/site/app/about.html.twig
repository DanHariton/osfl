{% extends 'site/layout.html.twig' %}

{% block title %}OSFL | {{ 'index.contact.title'|trans }}{% endblock %}

{% block body %}
    {% include 'site/app/_component/header.html.twig' %}

    <div id="main-carousel" class="carousel slide mb-6 mb-md-5 mb-lg-6 mb-xl-7" data-ride="carousel" data-aos="fade-up">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="height: 660px" class="d-block w-100" src="{{ asset('images/about-us.jpg') }}" alt="about us" loading="lazy">
            </div>
        </div>
    </div>

    <div class="container text-center mb-6">
        <h5 class="mb-4">{{ 'about.title'|trans }}</h5>
        <div class="d-flex justify-content-sm-between text-left">
            <p class="w-45">{{ 'about.text1'|trans }}</p>
            <p class="w-45">{{ 'about.text2'|trans }}</p>
        </div>

    </div>


    {% include 'site/app/_component/footer.html.twig' %}

{% endblock %}