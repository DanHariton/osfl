{% extends 'site/layout.html.twig' %}

{% block title %}OSFL | {{ 'index.contact.title'|trans }}{% endblock %}

{% block body %}
    {% include 'site/app/_component/header.html.twig' %}

    <div class="container text-center mb-6">
        <h4 class="mb-4">{{ 'index.offer'|trans }}</h4>
        {% for imageContainer in offers %}
            <div class="d-flex flex-md-row flex-column justify-content-between mb-md-3 mb-0">
                {% if loop.index is even %}
                    {% for image in imageContainer %}
                        <a class="preview-photo-small-offer mb-md-0 mb-3" href="{{ asset(imageAssets ~ image.fileName) }}" data-lightbox="{{ image.offerImage.id }}" data-title="{{ etrans.read(image.offerImage.name) }}">
                            <img class="w-100" src="{{ asset(imageAssets ~ image.fileName) }}" alt="offer">
                        </a>
                    {% endfor %}
                {% else %}
                    {% for image in imageContainer %}
                        <a class="preview-photo-big mb-md-0 mb-3" href="{{ asset(imageAssets ~ image.fileName) }}" data-lightbox="{{ image.offerImage.id }}" data-title="{{ etrans.read(image.offerImage.name) }}">
                            <img class="w-100" src="{{ asset(imageAssets ~ image.fileName) }}" alt="offer">
                        </a>
                    {% endfor %}
                {% endif %}
            </div>    
        {% endfor %}

    </div>


    {% include 'site/app/_component/footer.html.twig' %}

{% endblock %}